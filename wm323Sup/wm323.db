record(bo, "$(P)RUN:SP")
{
    field(DESC, "Starts the pump.")
    field(SCAN, "Passive")
    field(DTYP, "stream")

    field(OUT,  "@wm323.proto run($(P),ID,ERROR) $(PORT)")
    
    field(ZNAM, "")
    field(ONAM, "Run")
    
    info(INTEREST, "HIGH")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:RUN:SP")
    field(SDIS, "$(P)DISABLE")
}

record(bo, "$(P)STOP:SP")
{
    field(DESC, "Stops the pump.")
    field(SCAN, "Passive")
    field(DTYP, "stream")

    field(OUT,  "@wm323.proto stop($(P),ID,ERROR) $(PORT)")

    field(ZNAM, "")
    field(ONAM, "Stop")

    info(INTEREST, "HIGH")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:STOP:SP")
    field(SDIS, "$(P)DISABLE")
}


